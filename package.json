{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "Simple Pomodoro Timer for macOS",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.pomodoro.timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}